---
interface Props {
  compact?: boolean;
}

const { compact = false } = Astro.props;
import '../styles/AuthorBio.css';
---

<aside class="author-bio" data-compact={compact}>
  <div class="author-bio__header">
    <img
      src="/assets/bio-image.jpg"
      alt="Shristi Gautam"
      class="author-bio__image"
      width="80"
      height="80"
      loading="lazy"
    />
    <div class="author-bio__info">
      <h3 class="author-bio__name">Shristi Gautam</h3>
      <p class="author-bio__title">AI Solution Architect & Researcher</p>
      {!compact && (
        <p class="author-bio__desc">
          I specialize in enterprise AI solutions and research. Exploring the latest in ML, NLP, and mathematics. Master's in AI @ IU, Germany.
        </p>
      )}
      <div class="author-bio__links">
        <a href="https://www.linkedin.com/in/shristigautam/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">LinkedIn</a>
        <a href="https://github.com/shris-ai" target="_blank" rel="noopener noreferrer" aria-label="GitHub">GitHub</a>
        <a href="/">About</a>
      </div>
    </div>
  </div>
</aside>
